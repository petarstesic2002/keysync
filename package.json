{
  "name": "keysync",
  "version": "1.0.0",
  "description": "Decode and analyze audio files (WAV, MP3, OGG, FLAC) with BPM, key and scale detection.",
  "main": "./dist/node/index.js",
  "browser": "./dist/browser/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/node/index.js",
      "browser": "./dist/browser/index.js",
      "default": "./dist/node/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc -p tsconfig.node.json",
    "build:browser": "vite build",
    "test": "vitest run --config vitest.config.ts",
    "test:browser": "vitest run --environment happy-dom --config vitest.config.ts",
    "test:node": "vitest run --environment node --config vitest.config.ts",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm run test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "audio",
    "bpm",
    "key",
    "scale",
    "audio analysis",
    "key finder",
    "bpm finder",
    "key and bpm finder"
  ],
  "author": {
    "name": "Petar Stesic",
    "email": "petarstesic2002@gmail.com",
    "url": "https://github.com/petarstesic2002"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.13",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "audio-decode": "^2.2.3",
    "essentia.js": "^0.1.3",
    "vite": "^7.0.5"
  },
  "type": "module",
  "files": [
    "dist",
    "lib",
    "README.md"
  ]
}
